<div class="container-sm">

    <div class="card row user-info-container d-flex flex-row">
        <div class="col-sm">
            <div class="user-message">
                <h5 class="titulo-cor">Olá, {{data.aluno.primeiroNome}}</h5>
                <small class="desc">Quais são as dúvidas de hoje?</small>
            </div>
        </div>

        <div class="col-sm one">
            <div class="user-profile">
                <div>
                    <h5 class="titulo-cor">{{data.aluno.nome}}</h5>
                    <small class="desc">Fatec Zona Leste</small>
                </div>
                <div class="img">
                    <span class="material-symbols-sharp">
                        fiber_manual_record
                    </span>
                    <img src={{data.aluno.perfilImg}} alt="Imagem de perfil do tutor">
                </div>
            </div>
        </div>

        <div class="col-sm">
            <div class="user-minutos d-flex">
                <div class="text d-flex flex-column justify-content-center gap-2">
                    <small class="desc">Você possui</small>
                    <h5><span class="minuto-qntd">20</span>min</h5>
                </div>
                <a href="/aluno/comprar"><button class="p-2 btn btn-primary buy">Comprar</button></a>
            </div>
        </div>
    </div>

    <div class="categorias-container pt-4 gap-3 d-flex flex-column">

        <h5 class="desc">Em qual tecnologia deseja ajuda?</h5>
        <div class="categorias-grid ">
            {{#each data.tecnologia}}
            {{#dataValues}}
            <a href="/aluno/tutor" class="card p-3 categoria-card">
                <span>{{nomeTecnologia}}</span>
                <img src="/img/icon/icons8-html-5.svg" alt="">
            </a>
            {{/dataValues}}
            {{/each}}
        </div>
    </div>

</div>