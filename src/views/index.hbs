<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@48,400,1,0" />
    <title>ClassCode</title>
</head>
<body>
    <section height="100vw" class="login-container d-flex align-items-center justify-content-center">
        <form class="p-5 d-flex flex-column gap-3 card" action="/login" method="POST">
            <div class="d-flex justify-content-center">
                <img src="/img/ClassCodeLogo.svg" alt="">
            </div>
            <div class="d-flex align-items-center flex-column gap-2">
                <h3>Login</h3>
                <div class="d-flex flex-column">
                    <label for="email">Email</label>
                    <input class="form-control" type="text" id="email" name="email">
                </div>
                <div class="d-flex flex-column">
                    <label for="senha">Senha</label>
                    <input class="form-control" type="password" id="senha" name="senha">
                </div>
                <button type="submit" class="btn btn-primary">Confirmar</button>
                <div class="links-form">
                    <a href="/cadastro"><small>Criar Conta</small></a>
                </div>
            </div>
</body>
</html>